{
    "apiVersion": "batch/v1",
    "kind": "Job",
    "metadata": {
                "name": "backrest-{{.Command}}-{{.ClusterName}}",
                "labels": {
                    "vendor": "crunchydata",
                    "pgo-backrest": "true",
		    "pgbackup": "true",
                    "pg-cluster": "{{.ClusterName}}"
                }
    },
    "spec": {
        "template": {
            "metadata": {
                "name": "backrest-{{.Command}}-{{.ClusterName}}",
                "labels": {
                    "vendor": "crunchydata",
                    "pgo-backrest": "true",
		    "pgbackup": "true",
                    "pg-cluster": "{{.ClusterName}}"
                }
            },
            "spec": {
                "volumes": [],
                "serviceAccountName": "postgres-operator",
                "containers": [{
                    "name": "backrest",
                    "image": "{{.COImagePrefix}}/pgo-backrest:{{.COImageTag}}",
                    "volumeMounts": [],
                    "env": [{
                        "name": "COMMAND",
                        "value": "{{.Command}}"
                    }, {
                        "name": "COMMAND_OPTS",
                        "value": "{{.CommandOpts}}"
                    }, {
                        "name": "PODNAME",
                        "value": "{{.PodName}}"
                    }, {
                        "name": "NAMESPACE",
                        "valueFrom": {
                            "fieldRef": {
                                "fieldPath": "metadata.namespace"
                            }
                        }
                    }]
                }],
                "restartPolicy": "Never"
            }
        }
    }
}
