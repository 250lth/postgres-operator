{
    "apiVersion": "batch/v1",
    "kind": "Job",
    "metadata": {
        "name": "backup-{{.Name}}",
       	"labels": {
       		"vendor": "crunchydata",
               	"pgbackup": "true",
                "pg-cluster": "{{.Name}}"
	}
    },
    "spec": {
        "backoffLimit": 0,
        "template": {
            "metadata": {
                "name": "{{.Name}}",
                "labels": {
       			"vendor": "crunchydata",
               		"pgbackup": "true",
                    	"pg-cluster": "{{.Name}}"
                }
            },
            "spec": {
                "volumes": [{
                    "name": "pgdata",
                    {{.PvcName}}
                }],

        {{.SecurityContext}}

                "containers": [{
                    "name": "backup",
                    "image": "{{.CCPImagePrefix}}/crunchy-backup:{{.CCPImageTag}}",
                    "volumeMounts": [{
                        "mountPath": "/pgdata",
                        "name": "pgdata",
                        "readOnly": false
                    }],
                    "env": [{
                        "name": "BACKUP_HOST",
                        "value": "{{.BackupHost}}"
                    }, {
                        "name": "BACKUP_USER",
                        "valueFrom": {
                            "secretKeyRef": {
                                "name": "{{.BackupUserSecret}}",
                                "key": "username"
                            }
                        }
                    }, {
                        "name": "BACKUP_PASS",
                        "valueFrom": {
                            "secretKeyRef": {
                                "name": "{{.BackupUserSecret}}",
                                "key": "password"
                            }
                        }
                    }, {
                        "name": "BACKUP_PORT",
                        "value": "{{.BackupPort}}"
                    }]
                }],
                "restartPolicy": "Never"
            }
        }
    }
}
