{
    "kind": "PersistentVolumeClaim",
    "apiVersion": "v1",
    "metadata": {
        "name": "{{.PVCName}}",
        "labels": {
            "pgremove": "true"
        }
    },
    "spec": {
        "accessModes": [
            "{{.PVCAccessMode}}"
        ],
	"storageClassName": "{{.StorageClass}}",
        "resources": {
            "requests": {
                "storage": "{{.PVCSize}}"
            }
        }
    }
}
