{
    "apiVersion": "extensions/v1beta1",
    "kind": "Deployment",
    "metadata": {
        "name": "crunchy-operator"
    },
    "spec": {
        "replicas": 1,
        "template": {
            "metadata": {
                "labels": {
                    "name": "crunchy-operator"
                }
            },
            "spec": {
                "containers": [{
                    "name": "crunchy-operator",
                    "image": "crunchydata/crunchy-operator:centos7-9.5-1.2.8",
                    "imagePullPolicy": "IfNotPresent",
                    "env": [{
                        "name": "NAMESPACE",
                        "valueFrom": {
                            "fieldRef": {
                                "fieldPath": "metadata.namespace"
                            }
                        }
                    }, {
                        "name": "MY_POD_NAME",
                        "valueFrom": {
                            "fieldRef": {
                                "fieldPath": "metadata.name"
                            }
                        }
                    }],
                    "volumeMounts": [{
                        "mountPath": "/pgconf",
                        "name": "pgconf",
                        "readOnly": true
                    }]
                }],
                "volumes": [{
                    "name": "pgconf",
                    "persistentVolumeClaim": {
                        "claimName": "crunchy-pvc"
                    }
                }]
            }
        }
    }
}
